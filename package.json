{
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "emmet": "^2.4.11",
    "htmlhint": "^1.3.0",
    "stylelint": "^16.20.0",
    "stylelint-config-standard-scss": "^15.0.1"
  },
  "scripts": {
    "lint:css": "stylelint \"**/*.{css,scss}\"",
    "lint:html": "htmlhint \"_site/**/*.html\"",
    "build": "bundle exec jekyll build",
    "minify:css": "cleancss -o _site/assets/css/main.min.css _site/assets/css/main.css",
    "build:prod": "npm run build && npm run minify:css"
  }
}
